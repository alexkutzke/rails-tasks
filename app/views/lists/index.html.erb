<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<%= link_to 'New List', new_list_path %>

<br>

<% @lists.each do |list| %>
  <h2><%= list.name %> <%= link_to "[+]", new_list_task_path(list) %> </h2>
  <% if list.tasks.empty? %>
    <%= "Nenhuma tarefa.".html_safe  %>
  <% else %>
    <table>
      <thead>
        <tr>
          <th>Task</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <%= render list.tasks %>
      </tbody>
      <tfoot>
        <tr>
          <td><%= link_to 'Edit List', edit_list_path(list) %></td>
          <td><%= link_to 'Destroy List', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      </tfoot>
    </table>
  <% end %>
<% end %>
